{
  "compilerOptions": {
    "outDir": "./build",
    "declaration": true, 
    "rootDir": "./src",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "Node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./src/@types",
      "./src/index.d.ts"
    ]
  }
}